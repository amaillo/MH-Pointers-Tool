{
  "name": "mh-pointers-tool",
  "version": "1.1.0",
  "description": "A modding tool to edit strings in old monster hunter games, and hopefully other games too.",
  "main": "index.js",
  "scripts": {
    "build": "webpack build ./src/index.js",
    "test": "qode ./src/index.js",
    "start": "webpack && qode ./src/index.js",
    "debug": "webpack --devtool source-map && qode --inspect --enable-source-maps ./src/index.js"
  },
  "keywords": [
    "monster",
    "hunter",
    "pointers",
    "ps2",
    "game"
  ],
  "author": "amaillo",
  "license": "MIT",
  "dependencies": {
    "@nodegui/nodegui": "0.59.2",
    "encoding-japanese": "^2.0.0"
  },
  "devDependencies": {
    "@nodegui/packer": "^1.5.0",
    "@nodegui/qode": "^18.12.1",
    "debug": "^4.3.4",
    "native-ext-loader": "^2.3.0",
    "ts-loader": "^9.4.2",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.1"
  }
}
